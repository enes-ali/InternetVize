@{
    ViewData["Title"] = "Login";
}

@model LoginModel

<div class="row justify-content-center align-items-center">
    <form class="col-4" asp-action="Index" method="post">
        <div class="card">
            <div class="card-header"><h3>Login</h3></div>

            <div class="card-body">
                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                <div class="mb-2">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                    <label class="" asp-for="RememberMe">Beni hatırla</label>
                    <span asp-validation-for="RememberMe" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer">
                <input type="submit" value="Giriş" class="btn btn-primary" />

                <a class="btn btn-link" asp-area="" asp-controller="Register" asp-action="Index">
                    Kayıt Ol
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}