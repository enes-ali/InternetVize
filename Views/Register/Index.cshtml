@{
    ViewData["Title"] = "Register";
}
@model RegisterModel

<div class="row justify-content-center">
    <form class="col-4" asp-action="Index" method="post">
        <div class="card">
            <div class="card-header">
                <h2>Kayıt Ol</h2>
            </div>

            <div class="card-body">
                <div class="mb-2">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="UserName">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Name">İsim Soyisim</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <input class="form-check-input" type="checkbox" asp-for="IsAdmin" />
                    <label class="" asp-for="IsAdmin">Admin mi</label>
                    <span asp-validation-for="IsAdmin" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer">
                <input type="submit" value="Kayıt Ol" class="btn btn-primary" />

                <a class="btn btn-link" asp-area="" asp-controller="Register" asp-action="Index">
                    Giriş yap
                </a>
            </div>
        </div>
    </form>
</div>