@{
    ViewData["Title"] = "Mesaj Yolla";
    var Users = ViewData["users"] as List<User>;
}
@model SendMessageModel

<div class="row justify-content-center">
    <form class="col-4" asp-action="SendMessage" method="post">
        <div class="card">
            <div class="card-header">
                <h2>Mesaj Gönder</h2>
            </div>

            <div class="card-body">
                <label class="mb-2" asp-for="ReceiverId">Kullanıcı Seçiniz</label>
                @foreach(var user in Users){
                    <div class="d-flex gap-2">
                        <input type="checkbox" id=@user.Id asp-for="ReceiverId" value=@user.Id class="form-check" />
                        <label for=@user.Id>@user.Name</label>
                    </div>
                }
                <span asp-validation-for="Message" class="text-danger"></span>

                <div class="mt-4 mb-2">
                    <label class="mb-2  " asp-for="Message">Mesajınız</label>
                    <textarea asp-for="Message" class="form-control" ></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer">
                <input type="submit" value="Gönder" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>